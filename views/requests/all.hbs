{{> header}}

{{> navigation}}

    <div class="row">
      <div class="col-sm-8 col-sm-push-4">

          {{#if message}}
          <div class="alert alert-success" role="alert">
            <span class="fa fa-check-circle" aria-hidden="true"></span>
            <span class="sr-only">Message: </span>
            {{ message }}
          </div>
          {{/if}}

        <!-- content  start -->
        <div id="content">

          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>All Requests</h4>
            </div>

            <div class="table-responsive">
              <table class="table table-bordered table-striped table-hover responsive">
                <thead>
                  <tr>
                    <th style="width:5%;" class="text-center"><strong>#</strong></th>
                    <th style="width:30%;"><strong>Description</strong></th>
                    <th style="width:20%;" class="text-center"><strong>Request Type</strong></th>
                    <th style="width:15%;" class="text-center"><strong>Approved</strong></th>
                    <th style="width:15%;" class="text-center"><strong>Resolved</strong></th>
                    <th style="width:15%;"></th>
                  </tr>
                </thead>
                <tbody>
                  {{#each results}}
                  <tr>
                    <td class="text-center">{{counter @index }}</td>

                    <td>
                      <h3 class="title"><a href="{{fullUrl}}/requests/{{this._id}}"> {{ this.title }} </a></h3>
                    </td>

                    <td class="text-center">
                      {{#if this.request_type}}
                      <strong class="text-warning"> Maintenance </strong>
                      {{else}}
                        <strong class="text-danger"> Repairs </strong>
                      {{/if}}
                    </td>

                    <td class="text-center">
                      {{#if this.approved}}
                       <strong class="text-success"> YES &nbsp;</strong>   
                      {{else}}  
                        <a href="{{fullUrl}}/approve-request/{{this._id}}" class="btn btn-xs icon-link"> 
                        <span class="fa fa-check-square"></span></a> &nbsp;&nbsp;
                        <a href="{{fullUrl}}/reject-request/{{this._id}}" class="btn btn-xs icon-link">
                       <strong class="text-danger"> NO &nbsp;</strong> 
                        <span class="fa fa-cross-square"></span></a>
                      {{/if}}
                    </td>


                    <td class="text-center">
                      {{#if this.resolved}}
                        <strong class="text-success"> YES &nbsp;</strong>   
                      {{else}}
                        <a href="{{fullUrl}}/resolve-request/{{this._id}}" class="btn btn-xs icon-link">
                        <strong class="text-danger"> NO &nbsp;</strong>
                        <span class="fa fa-check-square"></span></a>
                      {{/if}}

                    </td>


                    <td class="text-right">
                      <a href="{{fullUrl}}/comments/new/{{this._id}}" class="btn btn-primary btn-xs"> <span class="fa fa-comment"></span> Add</a> &nbsp;&nbsp;

                    </td>

                  </tr>
                  {{/each}}

                  </tbody>
              </table>
            </div>

          </div>
          <!-- /.panel panel-default -->
        </div> 

      </div>  
    
      {{> sidebar}}
                    
    </div>
    {{!-- End Row --}}

{{> footer}}