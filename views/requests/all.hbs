{{> header}}

    <div class="row">
      <div class="col-sm-8 col-sm-push-4">

      <!-- content  start -->
      <div id="content">

        <div class="panel panel-default">
          <div class="panel-heading">
            <h4>All Requests</h4>
          </div>

          {{#if message}}
          <div class="alert alert-success" role="alert">
            <span class="fa fa-check-circle" aria-hidden="true"></span>
            <span class="sr-only">Message: </span>
            {{ message }}
          </div>
          {{/if}}

          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover responsive">
              <thead>
                <tr>
                  <th style="width:5%;" class="text-center"><strong>#</strong></th>
                  <th style="width:60%;"><strong>Description</strong></th>
                  <th style="width:15%;"><strong>Approved</strong></th>
                  <th style="width:15%;"><strong>Resolved</strong></th>
                  <th style="width:15%;"></th>
                </tr>
              </thead>
              <tbody>
                {{#each results}}
                <tr>
                  <td class="text-center">{{counter @index }}</td>
                  <td><h3>{{ this.title }} <br><small>{{ this.description}}</small></h3></td>

                  <td>
                    {{#if this.approved}}
                      YES  
                    {{else}}
                      NO {{!-- 
                      <form action="/approve-request" method="get">
                      <input type="hidden" name="id" value="{{ this._id }}">
                        <button type="submit" class="btn btn-default">Resolve Now</a>
                      </form>  --}}
                      <a href="approve-request/{{this._id}}" class="btn btn-default"> Approve</a>
                    {{/if}}
                  </td>


                  <td>
                    {{#if this.resolved}}
                      YES 
                    {{else}}
                      NO  {{!-- 
                      <form action="/resolve-request/{{ this._id }}" method="get">
                        <input type="hidden" name="_method" value="PUT">
                        <button type="submit" class="btn btn-default">Resolve Now</a>
                      </form>  --}}
                    {{/if}}

                  </td>


                  <td></td>

                </tr>
                {{/each}}

                </tbody>
            </table>
          </div>

        </div>
        <!-- /.panel panel-default -->
      </div>   
    
      {{> sidebar}}
                    
    </div>
    {{!-- End Row --}}

{{> footer}}