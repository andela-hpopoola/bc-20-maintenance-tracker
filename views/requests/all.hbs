{{> header}}

{{> navigation}}

    <div class="row">
      <div class="col-sm-8 col-sm-push-4">

          {{#if message}}
          <div class="alert alert-success" role="alert">
            <span class="fa fa-check-circle" aria-hidden="true"></span>
            <span class="sr-only">Message: </span>
            {{ message }}
          </div>
          {{/if}}

        <!-- content  start -->
        <div id="content">

          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>All Requests</h4>
            </div>

            <div class="table-responsive">
              <table class="table table-bordered table-striped table-hover responsive">
                <thead>
                  <tr>
                    <th style="width:5%;" class="text-center"><strong>#</strong></th>
                    <th style="width:40%;"><strong>Description</strong></th>
                    <th style="width:15%;"><strong>Request Type</strong></th>
                    <th style="width:15%;"><strong>Approved</strong></th>
                    <th style="width:15%;"><strong>Resolved</strong></th>
                    <th style="width:10%;"></th>
                  </tr>
                </thead>
                <tbody>
                  {{#each results}}
                  <tr>
                    <td class="text-center">{{counter @index }}</td>

                    <td>
                      <h3 class="title">{{ this.title }} </h3>
                    </td>

                    <td>
                      {{#if this.request_type}}
                        Maintenance
                      {{else}}
                        Repairs
                      {{/if}}
                    </td>

                    <td style="text-align:center">
                      {{#if this.approved}}
                        YES  
                      {{else}}
                        NO 
                        <a href="{{fullUrl}}/approve-request/{{this._id}}" class="btn btn-default btn-xs pull-right"> <span class="fa fa-check"></span></a>
                      {{/if}}
                    </td>


                    <td style="text-align:center">
                      {{#if this.resolved}}
                        YES 
                      {{else}}
                        NO  
                        <a href="{{fullUrl}}/resolve-request/{{this._id}}" class="btn btn-default btn-xs pull-right"> <span class="fa fa-check"></span></a>
                      {{/if}}

                    </td>


                    <td><a href="{{fullUrl}}/comments/new/{{this._id}}" class="btn btn-primary btn-xs">Comment</a></td>

                  </tr>
                  {{/each}}

                  </tbody>
              </table>
            </div>

          </div>
          <!-- /.panel panel-default -->
        </div> 

      </div>  
    
      {{> sidebar}}
                    
    </div>
    {{!-- End Row --}}

{{> footer}}