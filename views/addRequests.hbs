{{> header}}

		      <div class="row">

		        <div class="">
		            
		            <h3>Create a New Request {{adminName }}</h3>
		            {{!-- used to prevent float --}}
		            <div class="clearfix"></div>

		            <form name="login" action="/requests" class="form-horizontal" role="form" method="post">
						
						{{!-- User --}}
						<div class="form-group">
						  <label class="col-sm-2 control-label">User <span class="mandatory">*</span></label>
						  <div class="col-sm-7">
							<select name="user_name" id="user_name" class="form-control">
								<option value="0">Select User</option>
								<option value="First User">First User</option>
								<option value="Second User">Second User</option>
							</select>
						  </div>
	                  	</div>

						{{!-- Request Type --}}
						<div class="form-group">
						  <label class="col-sm-2 control-label">Request Type <span class="mandatory">*</span></label>
						  <div class="col-sm-7">
							<select name="request_type" id="request_type" class="form-control">
								<option value="maintenance">Maintenance</option>
								<option value="request">Request</option>
							</select>
						  </div>
	                  	</div>

						{{!-- Request --}}
						<div class="form-group">
						  <label class="col-sm-2 control-label">Request <span class="mandatory">*</span></label>
						  <div class="col-sm-7">
						  		<textarea name="request" id="request" cols="30" rows="10" class="form-control"></textarea>
						  </div>
	                  	</div>

	                  	{{!-- TODO: Change to {{ request}} --}}
						<input type="hidden" name="request_type" value="request">
						<input type="hidden" name="admin_name" value="{{ adminName }}">

						<!-- Submit Button -->
						<div class="col-sm-offset-2 col-sm-10">
                       		<button type="submit" class="btn btn-primary">Submit</button>
                    	</div>
						
						<!-- /.Submit Button -->

		            </form>

		        </div>
		        
		      </div>

{{> footer}}