{{> header}}

  {{> navigation}}

    <div class="row">
      <div class="col-sm-8 col-sm-push-4">

          {{#if message}}
          <div class="alert alert-success" role="alert">
            <span class="fa fa-check-circle" aria-hidden="true"></span>
            <span class="sr-only">Message: </span>
            {{ message }}
          </div>
          {{/if}}

          <!-- content  start -->
          <div id="content">

            <div class="panel panel-default">
              <div class="panel-heading">
                <h4>All comments</h4>
              </div>

              <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover responsive">
                  <thead>
                    <tr>
                      <th style="width:10%;" class="text-center"><strong>#</strong></th>
                      <th style="width:90%;"><strong>Description</strong></th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each results}}
                    <tr>
                      <td class="text-center">{{counter @index }}</td>
                      <td><h3 class="title">{{ this.title }} </h3>
                      <div>{{{ this.description }}}</div>
                      </td>
                      <td></td>

                    </tr>
                    {{/each}}

                    </tbody>
                </table>
              </div>

            </div>
            <!-- /.panel panel-default -->
          </div>  

      </div> 
    
      {{> sidebar}}
                    
    </div>
    {{!-- End Row --}}

{{> footer}}